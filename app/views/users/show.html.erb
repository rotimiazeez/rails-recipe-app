<div class="columns is-flex-direction-column is-align-items-center">
	<div class="column is-half has-text-centered">
		<h1 class="m-5 is-size-3 has-text-weight-bold">Shopping List</h1>
		<div class="columns has-text-weight-semibold">
			<div class="column">
				<p>Amount of food items to buy: <%= @items_count %> </p>
			</div>
			<div class="column">
				<p>Total value of food needed: $<%= @total_amount %> </p>
			</div>
		</div>
	</div>
	<div>
	<div class="table-container">
		<table class="table is-fullwidth">
			<thead>
				<tr>
					<th>Food</th>
					<th>Quantity</th>
					<th>Price</th>
				</tr>
			</thead>
			<tbody>
			  <% @items.each do |item| %>
					<tr>
						<td><%= item.name %></th>
						<td><%= "#{item.quantity} #{item.measurement_unit}" %></td>
						<td>$<%= item.price %></td>
					</tr>
     		<% end %>
			</tbody>
		</table>
	</div>
</div>
</div>
