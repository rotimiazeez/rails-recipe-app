<div class="is-flex is-justify-content-end">
  <%= link_to "Add Food", new_food_path, class: "button is-focused is-black m-5"%>
</div>
<div class="table-container m-3">
  <table class="table is-fullwidth is-striped is-bordered">
    <thead>
      <tr>
        <th>Food</th>
        <th>Measurement Unit</th>
        <th>Unit Price</th>
        <th>Actions</th>
      </tr>
    </thead>

    <tbody>
      <% @foods.each do |food| %>
        <tr>
          <th><%= food.name %></th>
          <td><%= food.measurement_unit %></td>
          <td>$<%= food.price %></td>
          <td><%= link_to 'Delete', food, method: :delete, data: { confirm: 'Are you sure you want to delete this food?'}, class: "button is-small is-danger is-outlined"%></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
