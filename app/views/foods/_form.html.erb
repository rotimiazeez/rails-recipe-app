<%= form_with(model: food) do |form| %>
  <% if food.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(food.errors.count, "error") %> prohibited this food from being saved:</h2>

      <ul>
        <% food.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field m-5">
    <%= form.label :name, class: "label" %>
    <div class="control">
      <%= form.text_field :name, size: "50x10"%>
    </div>
  </div>

  <div class="field m-5">
    <%= form.label :measurement_unit, class: "label" %>
    <div class="control">
      <%= form.text_field :measurement_unit, size: "50x10"%>
    </div>
  </div>

  <div class="field m-5">
    <%= form.label :price, class: "label" %>
    <div class="control">
      <%= form.text_field :price, type: "number"%>
    </div>
  </div>

  <div class="actions">
    <%= form.submit class: "button is-success is-focused m-5" %>
  </div>
<% end %>
